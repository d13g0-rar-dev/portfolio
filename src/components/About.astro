<script>
  const $ = (id: string) => document.getElementById(id);
  let texto = "Desarrollador Web";
  let i = 0;

  function escribirTexto() {
    if (i < texto.length) {
      const letteringElement = $("lettering");
      if (letteringElement) {
        letteringElement.innerHTML += texto.charAt(i);
      }
      i++;
      setTimeout(escribirTexto, 50); // Ajusta la velocidad de escritura aquí (en milisegundos)
    } else {
      setTimeout(borrarTexto, 2000); // Espera 2 segundos antes de comenzar a borrar
    }
  }

  function borrarTexto() {
    if (i > 0) {
      const letteringElement = $("lettering");
      if (letteringElement) {
        letteringElement.innerHTML = texto.substring(0, i - 1);
      }
      i--;
      setTimeout(borrarTexto, 50); // Ajusta la velocidad de borrado aquí (en milisegundos)
    } else {
      setTimeout(escribirTexto, 0); // Espera 2 segundos antes de comenzar a escribir nuevamente
    }
  }

  escribirTexto(); // Inicia el proceso de escritura al cargar la página
</script>

