<section id="sobre-mi" class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Two-column grid layout -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
            <!-- Left column: Personal information -->
            <div class="space-y-6">
                <h2 class="text-3xl font-bold text-gray-900">¡Hola, soy [Tu Nombre]!</h2>
                <p class="text-lg text-gray-700">
                    [Escribe aquí una breve introducción sobre ti, tu experiencia y tu trayectoria]
                </p>
                
                
                
                <!-- Hobbies section -->
                <div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Mis pasatiempos</h3>
                    <p class="text-gray-700">
                        [Escribe aquí algunos de tus pasatiempos e intereses personales]
                    </p>
                </div>
            </div>
            
            <!-- Right column: Photo -->
            <div class="order-first md:order-last">
                <div class="relative rounded-lg overflow-hidden shadow-xl h-96 w-full group">
                    <img 
                        src="/img/icon-about.png" 
                        alt="[Tu Nombre]" 
                        class="w-full h-full transition-opacity duration-500 delay-100 opacity-100 hover:opacity-0"
                    />
                    <img 
                        src="/img/image-sobreMi.png" 
                        alt="[Tu Nombre]" 
                        class="w-full h-full transition-opacity duration-500 delay-50 opacity-0 hover:opacity-100 absolute inset-0"
                    />
                </div>
            </div>
        </div>
    </div>
</section>
