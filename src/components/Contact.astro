<!-- Contact section -->
<section id="contacto" class="mt-24 mb-64">
    <div
        class="flex flex-col items-center justify-center max-w-7xl mx-auto px-4 sm:px-6 lg:px-8"
    >
        <div class="flex flex-col items-center justify-center w-1/2">
            <h2 class="text-3xl font-bold text-gray-900 mb-3">Contacto</h2>
            <form
                action="submit"
                class="flex flex-col gap-y-3 border border-gray-500 rounded-lg p-4 max-w-xs"
            >
                <input
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="username"
                    type="text"
                    placeholder="Nombre"
                />

                <input
                    type="email"
                    name="email"
                    placeholder="Email"
                    class="border border-gray-300 rounded-lg p-2"
                />
                <textarea
                    name="message"
                    placeholder="Mensaje"
                    rows="6"
                    class="border border-gray-300 rounded-lg p-2"></textarea>
                <button type="submit" class="submit_button">Enviar</button>
            </form>
        </div>
    </div>
</section>
